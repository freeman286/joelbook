.col-md-4
  %h2 Sign in
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "well" }) do |f|
    %div
      = f.label :email
      %br/
      = f.email_field :email, :autofocus => true, :class => "input-sm form-control"
    %div
      = f.label :password
      %br/
      = f.password_field :password, :class => "input-sm form-control"
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me
        = f.hidden_field :page, :value => "sign in"
    %div= f.submit "Sign in", class: 'btn btn-block btn-primary'
  = render "devise/shared/links"
