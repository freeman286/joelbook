= devise_error_messages!
.col-md-3
  %h2 Sign up
  %p
    I don't have an account
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "well" }) do |f|
    %div
      = f.label :email 
      %br/
      = f.email_field :email, :autofocus => true, :class => "input-sm form-control"
    %div
      = f.label :name
      %br/
      = f.text_field :name, :class => "input-sm form-control"
    %div
      = f.label :password
      %br/
      = f.password_field :password, :class => "input-sm form-control"
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, :class => "input-sm form-control"
    %div= f.submit "Sign up", :page => "sign up", class: 'btn btn-block btn-primary mt-1'

.col-md-3
  
.col-md-3
  %h2 Sign in
  %p
    I already have an account
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "well" }) do |f|
    %div
      = f.label :email
      %br/
      = f.email_field :email, :autofocus => true, :class => "input-sm form-control"
    %div
      = f.label :password
      %br/
      = f.password_field :password, :class => "input-sm form-control"
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me, :class => "input-sm"
        = f.hidden_field :page, :value => "sign up"
    %div= f.submit "Sign in", class: 'btn btn-block btn-primary'
.col-md-12
  = render "devise/shared/links"
