<% if @channels %>
  $('#channel-list').hide().html('');
  <% @channels.count do |channel| %>
    $('#channel-list').append('<%= escape_javascript(render "channels/card", :channel => channel)%>').fadeIn();
  <% end %>
  $('#channel-list').fadeIn();
<% else %>
  $('#channel-list').html('No channels found')
<% end %>