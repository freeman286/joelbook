<!DOCTYPE html>
<html>
<head>
  <title>RailsRealtime</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% flash.each do |type, message| %>
    <div class="alert alert-block">
      <button class="close" data-dismiss="alert">x</button>
      <div>
        <%= message %>
      </div>
    </div>
  <% end %>
  <%= yield %>
</div>


</body>
</html>
