var num = parseInt($.trim($('.notifications-count').html()))-($('.unread').length / 2);
if (!window.notificationsClicked) {
  if (num < 0) {
    num = 0;
  }
  if (num == 0) {
    $('.notifications-count').hide();
  } else {
    $('.notifications-count').html(num);
  }
} else if (window.notificationsClicked && window.notificationsCount) {
  if (num + 5 - window.notificationsCount == 0) {
    $('.notifications-count').hide();
  } else {
    $('.notifications-count').html(num + 5 - window.notificationsCount);
  }
  window.notificationsCount = 0;
}

$('.unread').addClass('read').removeClass('.unread')
window.notificationsClicked = true
